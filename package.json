{
  "name": "django-portfolio",
  "version": "1.0.0",
  "description": "Portfolio built with Django and Tailwind CSS",
  "scripts": {
    "build:css": "tailwindcss -i ./django_app/portfolio/static/css/tailwind.css -o ./django_app/portfolio/static/css/output.css --minify",
    "watch:css": "tailwindcss -i ./django_app/portfolio/static/css/tailwind.css -o ./django_app/portfolio/static/css/output.css --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3"
  }
}
